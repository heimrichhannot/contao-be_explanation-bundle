{
    "name": "heimrichhannot/contao-be_explanation-bundle",
    "description": "This bundle offers a simple backend explanation form field (inputType).",
    "keywords": [
        "contao",
        "backend",
        "explanation",
        "field",
        "developer"
    ],
    "type": "contao-bundle",
    "homepage": "https://github.com/heimrichhannot/contao-be_explanation-bundle",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Heimrich & Hannot",
            "email": "digitales@heimrich-hannot.de",
            "homepage": "http://www.heimrich-hannot.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/heimrichhannot/contao-be_explanation-bundle/issues"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.13 || ^5.0"
    },
    "require-dev": {
        "contao/test-case": "^1.1",
        "contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.2",
        "phpunit/phpunit": "^6.5",
        "phpunit/phpunit-mock-objects": "^4.0 || ^5.0",
        "phpunit/php-token-stream": "^1.4 || ^2.0 || ^3.0",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message-factory": "^1.0.2",
        "satooshi/php-coveralls": "^2.0",
        "symfony/phpunit-bridge": "^3.2"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "replace": {
        "heimrichhannot/contao-be_explanation": "*"
    },
    "autoload": {
        "psr-4": {
            "HeimrichHannot\\BeExplanationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HeimrichHannot\\BeExplanationBundle\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "contao-manager-plugin": "HeimrichHannot\\BeExplanationBundle\\ContaoManager\\Plugin"
    }
}
